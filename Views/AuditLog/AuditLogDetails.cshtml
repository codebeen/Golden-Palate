@model RRS.Models.ViewModels.AuditLogsViewModel

<!-- Modal -->
<div class="modal fade" id="viewLogDetails-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="viewLogDetailsLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header" id="addEditHeader">
                <h5 class="modal-title" id="viewLogDetailsLabel">Audit Log Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-start">
                <p><strong>Timestamp:</strong> @Model.CreatedDate.ToString("MMMM dd, yyyy")</p>
                <p>
                    <strong>User Fullname:</strong>
                    @(Model.FirstName == "System" && Model.LastName == "System" ? "System" : $"{Model.FirstName} {Model.LastName}")
                </p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Role:</strong> @Model.UserRole</p>
                <p><strong>Activity:</strong> @Model.Activity</p>
                @if (Model.Status.ToLower() == "success")
                {
                    <p><strong>Status:</strong> <span class="text-success">@Model.Status</span></p>
                } else if (Model.Status.ToLower() == "failed") {
                    <p><strong>Status:</strong> <span class="text-danger">@Model.Status</span></p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<style>
    #addEditHeader {
        border-bottom: none;
        padding: 1.5rem 1.5rem 0.5rem;
        background: linear-gradient(to right, #0062cc, #0096ff);
        color: white;
    }
</style>