@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<!-- MAIN SECTION -->
<section id="Home" style="background-color:white;" class="height-100 container-fluid">


    <div class="col-12 text-container" style="text-align: center; text-align: left; align-content: left;">
        <p style="font-size: 10vw; margin: 0; line-height: 1.2; font-family: 'Cormorant Garamond';">
            NO LINES,
        </p>
        <p style="font-size: 8vw; margin: 0; line-height: 1.2; font-family: 'Cormorant Garamond'; margin-left: 2%; margin-top: 2%;">
            NO WORRIES.
        </p>
    </div>

    <style>
        /* Mobile first approach */
        .text-container p {
            font-size: 8vw; /* Relative font size based on viewport width */
            margin: 0;
            line-height: 1.2;
        }

            .text-container p:nth-child(2) {
                margin-left: 2%;
            }

        /* Larger screens */
        @@media (min-width: 768px) {
            .text-container p

        {
            font-size: 5rem; /* Adjust for medium screens */
        }

        }

        @@media (min-width: 1200px) {
            .text-container p

        {
            font-size: 6rem; /* Adjust for large screens */
        }

        .text-container p:nth-child(2) {
            margin-left: 1%;
        }

        }
    </style>

    <div style="height: 200px; width: 2px; background-color: black; margin: 0 auto; margin-left: 55%; display: block; margin-top: -200px;"></div>


    <img src="~/assets/MENU.png" alt="Right Image" style="position: absolute; top: 35%; right: 5%; transform: translateY(-50%); width: 40vw; height: auto;">
    <p style="color:black; font-family:'Cormorant Garamond'; font-size:3rem; margin-left:60%; margin-top: -100px;">Easily reserve your table and enjoy a seamless dining experience, with no wait and all the flavors you crave.</p>
