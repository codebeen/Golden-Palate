@model RRS.Models.ViewModels.ReservationDetailsViewModel

<!-- Modal -->
<div class="modal fade" id="viewDetails-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="viewDetailsLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewDetailsLabel">Reservation Details for @Model.CustomerFullName</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-start">
                <p><strong>Reservation Number:</strong> @Model.ReservationNumber</p>
                <p><strong>Customer Name:</strong> @Model.CustomerFullName</p>
                <p><strong>Date:</strong> @Model.ReservationDate.ToString("MMMM dd, yyyy")</p>
                @if (Model.BuffetType.ToLower() == "breakfast")
                {
                    <p><strong>Time:</strong> 8:00 AM - 10:30 AM</p>
                }
                @if (Model.BuffetType.ToLower() == "lunch")
                {
                    <p><strong>Time:</strong> 11:30 AM - 2:30 PM</p>
                }
                @if (Model.BuffetType.ToLower() == "dinner")
                {
                    <p><strong>Time:</strong> 5:00 PM - 8:00 PM</p>
                }
                <p><strong>Table Number:</strong> @Model.TableNumber</p>
                <p><strong>Buffet Type:</strong> @Model.BuffetType</p>
                <p><strong>Total Price:</strong> ₱@Model.TotalPrice</p>
                <p><strong>Special Request:</strong> @Model.SpecialRequest</p>
                <p>
                    <strong>Status:</strong>
                    @switch (Model.ReservationStatus.ToLower())
                    {
                        case "pending":
                            <span class="text-warning">Pending</span>
                            break;
                        case "ongoing":
                            <span class="text-info">Ongoing</span>
                            break;
                        case "cancelled":
                            <span class="text-danger">Cancelled</span>
                            break;
                        case "completed":
                            <span class="text-success">Completed</span>
                            break;
                        default:
                            <span class="text-black">Unknown</span>
                            break;
                    }
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
