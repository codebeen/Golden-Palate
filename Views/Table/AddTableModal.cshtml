@model Table

<!-- Modal -->
<div class="modal fade" id="addTable" tabindex="-1" aria-labelledby="addTableLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" id="addEditHeader">
                <h1 class="modal-title fs-5" id="addTableLabel">Create New Table</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" asp-controller="Table" id="addTableForm" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Image Upload Field -->
                    <div class="form-group mb-2">
                        <label class="control-label mb-1">Table Image</label>
                        <input type="file" asp-for="TableImageFile" class="form-control" accept="image/*" required />
                        <span asp-validation-for="TableImageFile" class="text-danger"></span>
                    </div>

                    <!-- Table Number -->
                    <div class="form-group mb-2">
                        <label class="control-label mb-1">Table Number <span class="text-danger">*</span></label>
                        <input type="number" placeholder="ex. 15" asp-for="TableNumber" class="form-control" required />
                        <span asp-validation-for="TableNumber" class="text-danger"></span>
                    </div>

                    <!-- Seating Capacity -->
                    <div class="form-group mb-2">
                        <label class="control-label mb-1">Seating Capacity <span class="text-danger">*</span></label>
                        <input type="number" placeholder="ex. 10" asp-for="SeatingCapacity" class="form-control" required />
                        <span asp-validation-for="SeatingCapacity" class="text-danger"></span>
                    </div>

                    <!-- Price -->
                    <div class="form-group mb-2">
                        <label class="control-label mb-1">Price <span class="text-danger">*</span></label>
                        <input type="number" placeholder="₱123" asp-for="Price" class="form-control" step="0.01" required />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <!-- Table Location -->
                    <div class="form-group mb-2">
                        <label class="control-label mb-1">Table Location <span class="text-danger">*</span></label>
                        <select class="form-select" asp-for="TableLocation" required>
                            <option value="" selected>Select a location</option>
                            <option value="Window Seat">Window</option>
                            <option value="Indoor">Indoor</option>
                            <option value="Outdoor">Outdoor</option>
                        </select>
                        <span asp-validation-for="TableLocation" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="form-group mb-2">
                        <label class="control-label mb-1">Description</label>
                        <textarea asp-for="Description" placeholder="Write a short description here" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="fas fa-times me-2"></i>Cancel</button>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
