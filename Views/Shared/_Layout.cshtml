<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - RRS</title>

    <!-- Bootstrap and Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/adminLayout.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">

    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.2.1/css/dataTables.bootstrap5.css">

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.2.1/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.2.1/js/dataTables.bootstrap5.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/adminLayout.js" defer></script>
</head>
<body id="body-pd" class="bg-light" styel="font-family: 'Poppins'">
    @{
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    }
    <header class="header bg-white" id="header">
        <div class="header_toggle">
            <i class='bx bx-menu' id="header-toggle"></i>
        </div>
        <div class="header_img">
            <i class="fa-solid fa-user-circle fa-2x"></i>
        </div>
    </header>

    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a class="nav_logo" asp-area="" asp-action="Index" asp-controller="Dashboard">
                    <i class='bx bx-dish nav_logo-icon'></i>
                    <span class="nav_logo-name">Golden Palate</span>
                </a>
                <div class="nav_list">
                    <a class="nav_link @(currentController == "Dashboard" && currentAction == "Index" ? "active" : "")" asp-area="" asp-action="Index" asp-controller="Dashboard">
                        <i class='bx bx-grid-alt nav_icon'></i>
                        <span class="nav_name">Dashboard</span>
                    </a>
                    <a class="nav_link @(currentController == "AdminReservation" && currentAction == "Index" ? "active" : "")" asp-area="" asp-action="Index" asp-controller="AdminReservation">
                        <i class='bx bx-calendar nav_icon'></i>
                        <span class="nav_name">Reservations</span>
                    </a>
                    <a class="nav_link @(currentController == "Table" && currentAction == "Index" ? "active" : "")" asp-area="" asp-action="Index" asp-controller="Table">
                        <i class='bx bx-table nav_icon'></i>
                        <span class="nav_name">Table Management</span>
                    </a>
                    <a class="nav_link @(currentController == "Payment" && currentAction == "Index" ? "active" : "")" asp-area="" asp-action="Index" asp-controller="Payment">
                        <i class='bx bx-credit-card nav_icon'></i>
                        <span class="nav_name">Payments</span>
                    </a>
                    @*                     
                     <a class="nav_link" asp-area="" asp-action="Index" asp-controller="Menu">
                        <i class='bx bx-food-menu nav_icon'></i>
                        <span class="nav_name">Menu Management</span>
                    </a>
                    *@
                    <a class="nav_link @(currentController == "User" && currentAction == "Index" ? "active" : "")" asp-area="" asp-action="Index" asp-controller="User">
                        <i class='bx bx-user nav_icon'></i>
                        <span class="nav_name">User Management</span>
                    </a>
                    <a class="nav_link" asp-area="" asp-action="Index" asp-controller="AuditLog">
                        <i class='bx bx-history nav_icon'></i>
                        <span class="nav_name">Audit Logs</span>
                    </a>
                </div>
            </div>

            <div>
                <a class="nav_link mb-2" asp-area="" asp-action="ChangePassword" asp-controller="Account">
                    <i class='bx bx-key nav_icon'></i>
                    <span class="nav_name">Change Password</span>
                </a>
                <a class="nav_link" asp-area="" asp-action="LogoutUser" asp-controller="Account">
                    <i class='bx bx-log-out nav_icon'></i>
                    <span class="nav_name">SignOut</span>
                </a>
            </div>
        </nav>
    </div>

    <!-- Container Main -->
    <div class="container-fluid" style="margin-top: 70px">
        @RenderBody()
    </div>


    @await RenderSectionAsync("Scripts", required: false)

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

